{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
          "--require",
          "ts-node/register",
          "--opts",
          "${workspaceFolder}/.mocha.opts",
          "${workspaceFolder}/**/*.spec.ts",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "protocol": "auto"
  },
  ]
}