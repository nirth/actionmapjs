{
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "target": "ES2017",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "noImplicitReturns": false,
    "outDir": "dist",
    "listEmittedFiles": true,
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "vendor_types", "dist", "**/*.spec.ts"],
  "typeRoots" : [
    "node_modules/@types",
    "vendor_types",
    "./vendor_types"
  ]
}
